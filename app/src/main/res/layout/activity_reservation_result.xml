<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ReservationResultActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:paddingTop="57dp"
        android:text="@string/reservation_cancel_alert_message"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/movie_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="영화 제목"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/title_large" />

    <TextView
        android:id="@+id/screening_date_time_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="예매일과 예매시간"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium" />

    <TextView
        android:id="@+id/ticket_count_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:text="티켓 수"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium" />

    <TextView
        android:id="@+id/payment_amount_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="결제금액 및 결제 방식"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium" />

</LinearLayout>