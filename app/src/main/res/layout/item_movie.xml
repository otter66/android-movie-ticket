<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/movie_image_view"
        android:layout_width="76dp"
        android:layout_height="108dp"
        android:src="@drawable/baseline_image_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movie_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        android:text="영화 제목"
        android:textColor="@color/black"
        android:textSize="@dimen/title_medium"
        app:layout_constraintLeft_toRightOf="@id/movie_image_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movie_screening_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="상영일: 0000.00.00"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium"
        app:layout_constraintLeft_toRightOf="@id/movie_image_view"
        app:layout_constraintTop_toBottomOf="@id/movie_name_text_view" />

    <TextView
        android:id="@+id/movie_running_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="러닝타임: 000분"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium"
        app:layout_constraintLeft_toRightOf="@+id/movie_image_view"
        app:layout_constraintTop_toBottomOf="@+id/movie_screening_date_text_view" />

    <Button
        android:id="@+id/reservation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지금 예매"
        android:focusable="false"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>